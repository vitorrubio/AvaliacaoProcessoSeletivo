@{
    ViewData["Title"] = "Home Page";
}


@section Scripts
{
    <script src="~/js/index.js" asp-append-version="true"></script>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card shadow">
    <div class="card-header">
        <h6>Cadastro de Conta</h6>
    </div>
    <div class="card-body">
        <input type="hidden" id="Id" value="0" />
        <div class="row">
            <div class="form-group col-sm-4">
                <label>Nome</label>
                <input type="text" id="Nome" maxlength="50" class="form-control" />
            </div>
            <div class="col-sm-4">
                <label>Descricao</label>
                <input type="text" id="Descricao" maxlength="500" class="form-control" />
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-sm-12 text-right">
                <button id="btnSalvar" type="button" class="btn btn-sm btn-success" >Salvar</button>
            </div>
        </div>
    </div>
</div>